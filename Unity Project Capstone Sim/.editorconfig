# Top-most EditorConfig file
root = true

# C# files
[*.cs]
# These settings are for C# code style.

# Set the preference for the placement of the open brace for most C# code blocks to be at the end of the line
csharp_new_line_before_open_brace = none

# Set the preference for the placement of the open brace for types (classes, interfaces, structs, enums) to be at the end of the line
csharp_new_line_before_open_brace_for_types = none

# Set the preference for the placement of the open brace for methods, properties, control blocks, and expressions to be at the end of the line
csharp_new_line_before_open_brace_for_methods = none
csharp_new_line_before_open_brace_for_properties = none
csharp_new_line_before_open_brace_for_control_blocks = none
csharp_new_line_before_open_brace_for_anonymous_types = none
csharp_new_line_before_open_brace_for_object_collection_array_initializers = none
csharp_new_line_before_open_brace_for_lambdas = none
csharp_new_line_before_open_brace_for_local_functions = none

# Set the indentation style
indent_style = tab
# Set the indentation size
indent_size = 2

# Other settings can be placed here as needed
